<form method="post">
  <div>
    <label for="author">
      Name
    </label>
    <input
      type="text"
      id="author"
      name="author"
      placeholder="Your name"
    />
  </div>

  <div class="mb-6">
    <label for="content">
      Comment
    </label>
    <textarea
      id="content"
      name="content"
      rows="4"
      placeholder="Your comment"
    ></textarea>
  </div>

  <div>
    <button
      type="submit"
    >
      Submit
    </button>
  </div>
</form>